<body>



<section class="video-container">
  <video src="/images/food.mp4" autoplay loop playsinline></video>
  <div class="overlay">
    <h1 class="headtext">What's for Dinner?</h1>
  </div>
</section>


<div class="row">
  <form class=" landingform col s12 m12">
    <div class="row">
      <div class="input-field col s12 m12">
        <i class="material-icons prefix">account_circle</i>
        <input placeholder="Full Name" id="icon_prefix" type="text" class="validate">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12 m12">
        <i class="material-icons prefix">phone</i>
        <input placeholder="Telephone" id="icon-telephone" type="tel" class="validate">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12 m12">
        <i class="material-icons prefix">face</i>
        <input placeholder="Username" id="icon-face" type="text" class="validate">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12 m12">
        <i class="material-icons prefix">email</i>
        <input placeholder="Email" id="icon-email" type="email" class="validate">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6 m6">
        <i class="material-icons prefix">security</i>
        <input placeholder="Password" id="icon-security" type="password" class="validate">
      </div>
      <div class="input-field col s6 m6">
        <input placeholder="Confirm Password" id="confirm-password" type="password">
      </div>
    </div>
  </form>
</div>

<div class="buttons container">
  <div class="row">
  <a class="google-btn" href="/auth/google">Google+</a>
  <a class="facebook-btn" href="/auth/facebook">Facebook</a>
  </div>
</div>


